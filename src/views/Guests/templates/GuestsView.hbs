<div class="w-content">
  <div class="c-content__box">
    <div class="c-content__button-group">
      <button class="btn btn-primary js-summary-button">Resumen</button>
    </div>
    <table class="table table-striped table-responsive">
      <thead>
        <th>Nombre</th>
        <th>Bebida</th>
        <th>Acompañamiento</th>
      </thead>
      <tbody>
        <tr>
          {{#if requesting}}
            <td colspan="3">
              <div class="loading-spinner">
                <div class="loading-spinner__item"></div>
              </div>
            </td>
          {{else}}
            {{#unless items}}
              <td colspan="3">
                <span>No hay nadie apuntado aún</span>
              </td>
            {{else}}
              {{#each items}}
                <tr>
                  <td>{{ name }} {{ surname }}</td>
                  <td>{{ drink }}</td>
                  <td>{{ complement }}</td>
                </tr>
              {{/each}}
            {{/unless}}
          {{/if}}
        </tr>
      </tbody>
    </table>
  </div>
</div>
